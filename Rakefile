require 'echoe'

Echoe.new('rubyterminal', '0.0.1') do |p|
  p.description     = "RubyTerminal arms to prepare a ruby runtime environment for a program to launch new ruby process instantly."
  p.url             = "https://github.com/xli/rubyterminal"
