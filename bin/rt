#!/usr/bin/env ruby
begin
  require 'ruby_terminal'
rescue LoadError
  require 'rubygems'
  require 'ruby_terminal'
end


RubyTerminal.start do
  puts "Start at #{Dir.pwd}"
  puts "Ctrl-C to shutdown"
  RubyTerminal.load_environment(ARGV)
  RubyTerminal.loop_process(STDOUT)
end
ARGV.clear
if defined?(Test::Unit)
  Test::Unit.run = true
end
puts ''
